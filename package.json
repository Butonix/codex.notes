{
  "name": "codex.notes",
  "version": "0.1.0",
  "publishName": "CodeX Notes",
  "publishIcon": "assets/icons/mac/icon-white1024.icns",
  "description": "Simple, fast and useful crossplatform notes application based on CodeX Editor and Electron.",
  "private": true,
  "scripts": {
    "start": "electron .",
    "build": "webpack --progress  --display-error-details --display-entrypoints --display-reasons",
    "pack": "electron-packager . \"$npm_package_publishName\" --app-version=$npm_package_version --icon=$npm_package_publishIcon --overwrite --out=dist",
    "dmg": "mkdir ./dmg; rm \"./dmg/CodeX Notes.dmg\"; appdmg ./assets/dmg/appdmg.json \"./dmg/CodeX Notes.dmg\""
  },
  "author": {
    "name": "CodeX Team",
    "email": "team@ifmo.su"
  },
  "license": "MIT",
  "homepage": "https://ifmo.su/notes",
  "repository": {
    "type": "git",
    "url": "https://github.com/codex-team/codex.notes"
  },
  "bugs": "https://github.com/codex-team/codex.notes/issues/new",
  "dependencies": {
    "electron": "^1.7.5",
    "electron-pug": "^1.5.1",
    "sanitize-html": "^1.14.1"
  },
  "devDependencies": {
    "appdmg": "^0.4.5",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.0",
    "babel-preset-env": "^1.5.2",
    "css-loader": "^0.26.1",
    "electron-packager": "^9.0.0",
    "eslint": "^3.12.2",
    "eslint-loader": "^1.6.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^0.11.2",
    "path": "^0.12.7",
    "postcss-color-function": "^4.0.0",
    "postcss-color-hex-alpha": "^3.0.0",
    "postcss-cssnext": "^2.11.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.1.0",
    "postcss-custom-selectors": "^4.0.1",
    "postcss-font-family-system-ui": "^2.0.1",
    "postcss-font-variant": "^3.0.0",
    "postcss-loader": "^2.0.6",
    "postcss-media-minmax": "^3.0.0",
    "postcss-nested": "^2.0.2",
    "postcss-nested-ancestors": "^1.0.0",
    "postcss-nesting": "^4.0.1",
    "postcss-smart-import": "^0.7.4",
    "stylelint-webpack-plugin": "^0.4.2",
    "webpack": "^2.6.1"
  }
}
